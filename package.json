{
  "name": "clone-amazon-front",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "npm-run-all build:tailwind --parallel dev:next watch:tailwind",
    "prebuild": "npm run build:tailwind",
    "build": "npm run build:next",
    "start": "npm-run-all build:tailwind --parallel watch:tailwind start:next",
    "dev:next": "next dev",
    "build:next": "next build",
    "start:next": "next start",
    "build:tailwind": "tailwind build styles/tailwind.css -o styles/tailwind.output.css",
    "watch:tailwind": "nodemon -e css -x \"tailwindcss build styles/tailwind.css -o styles/tailwind.output.css\""
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.30",
    "@fortawesome/free-solid-svg-icons": "^5.14.0",
    "@fortawesome/react-fontawesome": "^0.1.11",
    "chokidar-cli": "^2.1.0",
    "next": "9.5.3",
    "nodemon": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "tailwindcss": "^1.8.4"
  }
}
